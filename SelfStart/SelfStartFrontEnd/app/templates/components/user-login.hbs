

<div class="ui hidden divider"></div>
<a id="login" class="item" {{action 'openModal'}}>Log in</a>

{{#ui-modal name="login" class="login tiny"}}

  {{#if loggingIn}}

    <link integrity="" rel="stylesheet" href="{{rootURL}}../assets/css/form-style.css"> <!-- Resource style -->

    <h2 class="ui fluid centered header" style="border-radius: 0.28571429rem;">Login</h2>

    <div class="content" style="padding-bottom: 0">
      <form class="cd-form floating-labels" {{action "submit" on="submit"}}>

        <div class="field" style="margin: 1em 0;">
          {{input class="email" type ="email" value=Email placeholder="Email" required = true}}
        </div>
        <div class="field" style="margin: 1em 0;">
          {{input class="lock" type ="password" value=PWord placeholder="Password" required = true}}
        </div>

        <div class="field" style="margin: 1em 0;">
          <button class="fluid ui blue button" value='submit' style="max-width: 100%; height: 50px;">Login</button>
        </div>

        <div class="field" style="margin: 1em 0;">
          {{!-- {{errorMessage}} --}}
          <p style="color: red; text-align: center;  text-decoration: underline; padding-top: 65px">{{errorMessage}}</p>
        </div>

      </form>
    </div>

  {{else}}
    <link integrity="" rel="stylesheet" href="{{rootURL}}../assets/css/form-style.css"> <!-- Resource style -->

    <h2 class="ui fluid centered header" style="border-radius: 0.28571429rem;">Sign in</h2>

    <!--style="height: 260px; padding-left:5%; padding-right: 5%; padding-top: 3%"-->

    <div class="content" style="padding-bottom: 0">
      <p style="text-align: center;">Lost your password? Please enter your email address. You will receive a link to create a new password.</p>
      <form class="cd-form floating-labels" {{action "submit" on="submit"}}>
        <div class="field" style="margin: 1em 0;">
          {{input class="email" type ="email" value=Email placeholder="Email" required = true}}
        </div>

        <div class="field" style="margin: 1em 0;">
          <button class="fluid ui blue button" style="max-width: 100%; height: 50px;" value="Submit">Reset Password</button>
        </div>

        <div class="field" style="margin: 1em 0;">

          <p style="cursor: pointer; text-align: center;  text-decoration: underline; padding-top: 65px" {{action 'login'}}>Back to log-in</p>
        </div>
      </form>
    </div>
  {{/if}}

{{/ui-modal}}

{{#ui-modal name="changePassword" class="changePassword" }}
  <div class="header">
    Please change your password and login again
  </div>
  <div class="content">
    <div class="ui form">
      <div class="inline field">
        <label>Password</label>
        {{input value=firstPassword type="password" placeholder="enter password"}}
      </div>
      <div class="inline field">
        <label>Reenter Password</label>
        {{input value=secondPassword type="password" placeholder="re-enter password"}}
      </div>
    </div>
  </div>

  <div class="actions">
    <div class="ui black deny button">
      Cancel
    </div>
    <div class="ui positive right labeled icon button">
      Save
      <i class="checkmark icon"></i>
    </div>
    <div class="ui center aligned container">
      <p style="color: #ca1010"> {{errorMessage}}</p>
    </div>
  </div>
{{/ui-modal}}

