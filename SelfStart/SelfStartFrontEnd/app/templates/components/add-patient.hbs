<div class="ui button" {{action 'openModal'}}>
  Add Client
</div>

{{#ui-modal name="newPatient" class="newPatient"}}
  <i class="close icon"></i>
  <link integrity="" rel="stylesheet" href="{{rootURL}}../assets/css/form-style.css"> <!-- Resource style -->

  <div class="header">
    Adding new Client
  </div>
  <div class="scrolling content">

    <form id="edit" class="cd-form floating-labels" {{action "submit" on="submit"}}>


      <legend>Account Settings</legend>
      <div class="field" style="margin: 1em 0;">
        {{input class="email" type="email" value = email placeholder="Email" required = true}}
      </div>
      <div class="field" style="margin: 1em 0;">
        {{input class="lock" type="text" value = encryptedPassword placeholder="Temperary password" required = true}}
      </div>

      <div class="ui hidden divider"></div>
      <div class="ui hidden divider"></div>

      <legend>Personal Info</legend>

      <div class="ui hidden divider"></div>
      <div class="ui two column grid">
        <div class="column " style="margin: 1em 0;">
          {{input class="user" type="text" value = givenName placeholder="First name" required = true}}
        </div>
        <div class="column " style="margin: 1em 0;">
          {{input class="user" type="text" value = familyName placeholder="Last Name" required = true}}
        </div>
      </div>

      <div class="ui two column grid">
        <div class="column " style="margin: 1em 0;">
          <input class="date" type="date" placeholder="Date of birth" value= {{selectedDate}}  onchange={{action 'assignDate' value="target.value"}} required>
        </div>

        <div class="column " style="margin: 1em 0;">

          {{#ui-dropdown class="gender selection" onChange=(action (mut gender))}}
            <div class="default text">Select a gender</div>
            <i class="dropdown icon" id="selectIcon"></i>
            <div class="menu">
              {{#each genderModel as |oneGender|}}
                <div data-value="{{oneGender.name}}" class="item">
                  {{oneGender.name}}
                </div>
              {{/each}}
            </div>
          {{/ui-dropdown}}
        </div>
      </div>

      <div class="field" style="margin: 1em 0;">
        {{input class="phone" type="text" value = phoneNumber placeholder="Phone number" required = true}}
      </div>

      <div class="ui hidden divider"></div>
      <div class="ui hidden divider"></div>




      <legend>Address</legend>

      <div class="ui hidden divider"></div>


      <div class="ui two column grid">
        <div class="column " style="margin: 1em 0;">
          {{input class="home" type="number" min="1" value = streetNumber placeholder="Street Number" required = true}}
        </div>
        <div class="column " style="margin: 1em 0;">
          {{input class="home" type="text" value = streetName placeholder="Street Name" required = true}}
        </div>
      </div>


      <div class="ui two column grid">
        <div class="column " style="margin: 1em 0;">
          {{input class="bookmark" type="number" min="1" placeholder="Unit Number" value = apartment}}
        </div>

        <div class="column " style="margin: 1em 0;">
          {{input class="flag" type="text" value = postalCode placeholder="Postal/Zip code" required = true}}
        </div>
      </div>


      <div class="ui three column grid" id="grid">
        <div class="column " style="margin: 1em 0;">

          {{#ui-dropdown class="address selection" onChange=(action (mut country))}}
            <div class="default text">Select a country</div>
            <i class="dropdown icon" id="selectIcon"></i>
            <div class="menu">
              {{#each model as |country|}}
                <div data-value="{{country.id}}" class="item">
                  {{country.name}}
                </div>
              {{/each}}
            </div>
          {{/ui-dropdown}}

        </div>
        <div class="column " style="margin: 1em 0;">
          {{#ui-dropdown class="address selection " onChange=(action (mut province))}}
            <div class="default text">Select a province</div>
            <i class="dropdown icon" id="selectIcon"></i>
            <div class="menu">
              {{#each provModel as |province|}}
                <div data-value="{{province.id}}" class="item">
                  {{province.name}}
                </div>
              {{/each}}
            </div>
          {{/ui-dropdown}}
        </div>
        <div class="column " style="margin: 1em 0;">
          {{input class="world" type="text" value = city placeholder="City" required = true}}
        </div>
      </div>

      <div class="field" style="margin: 1em 0;">
        <button class="fluid ui blue button" style="max-width: 100%; height: 50px;">
          Submit
        </button>
      </div>

    </form>
  </div>



{{/ui-modal}}