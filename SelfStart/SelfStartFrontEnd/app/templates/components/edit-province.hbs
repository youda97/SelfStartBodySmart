<p style="cursor: pointer; " title="Edit"  {{action 'openModal' }}>
  <img src="/assets/images/pencil.svg">
</p>

{{#ui-modal name= modalName class=modalName }}
  <i class="close icon"></i>
  <link integrity="" rel="stylesheet" href="{{rootURL}}../assets/css/form-style.css"> <!-- Resource style -->

  <div class="header">
    Edit Province: "{{provinceData.name}}"
  </div>
  <div class="content">

    <form id="edit" class="cd-form floating-labels" {{action "submit" on="submit"}}>

      <div class="field" style="margin-bottom: 1em">
        <h4>Province</h4>
        {{input class="world" type="text" value = provinceData.name placeholder="Add province" required=true}}
      </div>

      <div class="field" style="margin: 1em 0;">
        <h4>Country</h4>
        <p class="cd-select icon">
          <select class="world" onchange={{action 'selectCountry' value="target.value"}} required=true>
            {{#each countries as |oneCountry|}}
              <option value={{oneCountry.id}} selected={{eq provinceData.country.name oneCountry.name}}>
                {{oneCountry.name}}
              </option>
            {{/each}}
          </select>
          <</p>
      </div>

      <div class="field">
        <button class="fluid ui blue button" style="max-width: 100%; height: 50px;">
          Submit
        </button>
      </div>

    </form>
  </div>

{{/ui-modal}}